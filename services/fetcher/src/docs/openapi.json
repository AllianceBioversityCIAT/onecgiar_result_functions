          "op": {
            "type": "string",
            "enum": ["create", "update", "delete"],
            "default": "create"
          },
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "data"],
              "properties": {
                "type": { "type": "string", "example": "knowledge_product" },
                "op": {
                  "type": "string",
                  "enum": ["create", "update", "delete"]
                },
                "data": { "type": "object" }
              }
            }
