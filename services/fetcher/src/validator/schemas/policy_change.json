{
  "$id": "https://prms/schemas/policy_change.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Change Result",
  "description": "Schema for policy change results",
  "allOf": [
    { "$ref": "https://prms/schemas/common_fields.json" },
    {
      "type": "object",
      "properties": {
        "policy_change": {
          "type": "object",
          "properties": {
            "policy_type": {
              "type": "object",
              "anyOf": [{ "required": ["id"] }, { "required": ["name"] }],
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "status_amount": {
                  "type": "object",
                  "anyOf": [{ "required": ["id"] }, { "required": ["name"] }],
                  "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" }
                  },
                  "additionalProperties": false
                },
                "amount": {
                  "type": "integer"
                }
              },
              "additionalProperties": false
            },
            "policy_stage": {
              "type": "object",
              "anyOf": [{ "required": ["id"] }, { "required": ["name"] }],
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" }
              },
              "additionalProperties": false
            },
            "implementing_organization": {
              "type": "array",
              "items": {
                "type": "object",
                "anyOf": [
                  { "required": ["institutions_id"] },
                  { "required": ["institutions_acronym"] },
                  { "required": ["institutions_name"] }
                ],
                "properties": {
                  "institutions_id": { "type": "integer" },
                  "institutions_acronym": { "type": "string" },
                  "institutions_name": { "type": "string" }
                },
                "additionalProperties": false
              },
              "minItems": 1
            }
          },
          "required": [
            "policy_type",
            "policy_stage",
            "implementing_organization"
          ],
          "additionalProperties": false
        }
      },
      "required": ["policy_change"]
    }
  ]
}
