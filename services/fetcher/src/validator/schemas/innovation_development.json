{
  "$id": "https://prms/schemas/innovation_development.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Innovation Development Result",
  "description": "Schema for innovation development results",
  "allOf": [
    { "$ref": "https://prms/schemas/common_fields.json" },
    {
      "type": "object",
      "properties": {
        "innovation_development": {
          "type": "object",
          "properties": {
            "innovation_typology": {
              "type": "object",
              "properties": {
                "code": { "type": "integer" },
                "name": { "type": "string" }
              },
              "additionalProperties": false,
              "anyOf": [{ "required": ["code"] }, { "required": ["name"] }]
            },
            "innovation_developers": {
              "type": "string"
            },
            "innovation_readiness_level": {
              "type": "object",
              "properties": {
                "level": { "type": "integer" },
                "name": { "type": "string" }
              },
              "additionalProperties": false,
              "anyOf": [{ "required": ["level"] }, { "required": ["name"] }]
            }
          },
          "required": ["innovation_typology", "innovation_readiness_level"]
        }
      },
      "required": ["innovation_development"]
    }
  ]
}
